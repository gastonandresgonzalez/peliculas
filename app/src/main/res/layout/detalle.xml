<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_x="0dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pelicula_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="359dp"
        android:layout_y="10dp"
        android:text="Id"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_pelicula_titulo"
        android:layout_width="158dp"
        android:layout_height="75dp"
        android:layout_x="224dp"
        android:layout_y="2dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Titulo"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_pelicula_anio"
        android:layout_width="53dp"
        android:layout_height="40dp"
        android:layout_x="261dp"
        android:layout_y="192dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Año"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/tv_pelicula_url"
        android:layout_width="221dp"
        android:layout_height="280dp"
        android:layout_margin="10dip"
        android:layout_x="1dp"
        android:layout_y="2dp" />

    <TextView
        android:id="@+id/tv_pelicula_descripcion"
        android:layout_width="334dp"
        android:layout_height="128dp"
        android:layout_x="1dp"
        android:layout_y="326dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Descripcion"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_pelicula_duracion"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_x="291dp"
        android:layout_y="230dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Duracion"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_pelicula_rating"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_x="52dp"
        android:layout_y="284dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Rating"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/descripcion_rating"
        android:layout_width="51dp"
        android:layout_height="40dp"
        android:layout_x="0dp"
        android:layout_y="284dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Rating"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_pelicula_director"
        android:layout_width="93dp"
        android:layout_height="60dp"
        android:layout_x="290dp"
        android:layout_y="77dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Director"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_pelicula_genero"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_x="284dp"
        android:layout_y="143dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Genero"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/descripcion_director"
        android:layout_width="62dp"
        android:layout_height="38dp"
        android:layout_x="224dp"
        android:layout_y="77dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="none|textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="Director"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/descripcion_Genero"
        android:layout_width="58dp"
        android:layout_height="38dp"
        android:layout_x="224dp"
        android:layout_y="144dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="none|textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="Genero"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/descripcion_anio"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_x="224dp"
        android:layout_y="193dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="none|textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="Año"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="101dp" />

    <TextView
        android:id="@+id/descripcion_minutos"
        android:layout_width="66dp"
        android:layout_height="38dp"
        android:layout_x="225dp"
        android:layout_y="230dp"
        android:ems="10"
        android:fontFamily="sans-serif-condensed"
        android:inputType="none|textPersonName"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="Minutos"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="101dp" />

</AbsoluteLayout>